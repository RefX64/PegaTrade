@using PegaTrade.Layer.Models.Account
@model PegaUser

<div class="row">
    <div class="col-xs-6" style="border-right: 2px solid #dedede;">
        <strong>Create a new user account</strong>
        <form id="createAccountForm" asp-action="CreateNewUser" asp-controller="Account" asp-antiforgery="true">
            @Html.ValidationSummary()
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Username/Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="Email" class="form-control" placeholder="Example@example.com" />
            </div>
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="xxx" id="recaptcha-signup"></div>
            </div>
            <div class="checkbox">
                <label asp-for="IsSubscribeNewsLetter">
                    <input asp-for="IsSubscribeNewsLetter" type="checkbox" checked="true" />Subscribe To Newsletter
                </label><br />
                <small class="color-gray-devil">We'll send you product updates/releases, crypto related article/tips, our portfolio updates, and etc.</small>
            </div>

            <p class="text-danger" id="createMessageError"></p>

            <button type="button" id="createUserBtn" class="btn btn-indigo" onclick="app.SubmitCreateUserForm()" data-loading-text="Creating new user...">Create</button>
            <button class="btn" data-dismiss="modal">Close</button>
        </form>
    </div>

    <div class="col-xs-6">
        <p class="font-strong">If you already have an account, you can login by clicking the below.</p>
        <button type="button" class="btn btn-aqua" onclick="app.PTOpenLoginForm()">Login</button>
    </div>
</div>