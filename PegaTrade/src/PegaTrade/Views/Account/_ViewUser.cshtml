@model PegaTrade.Layer.Models.Account.PegaUser
@{ }

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="default-block marginBottom20">
            <div class="col-xs-3 col-lg-2" style="padding-top: 10px">
                <img src="@Model.GravatarImageLink()" alt="Avatar" class="img-circle" style="margin-bottom: 4px;" />
            </div>
            <div class="col-xs-9 col-lg-10">
                <div class="header">User Account</div>
                <div class="content">
                    <label asp-for="Username">Username:</label> @Model.Username <br />
                    <label asp-for="Email">Email Address:</label> (Hidden)
                </div>
            </div>
        </div>

        <div class="default-block">
            <div class="col-xs-12">
                <div class="header">User Information</div>
                <div class="content">
                    <label asp-for="FullName">Full Name:</label> @Model.FullName <br />
                    <label asp-for="TotalCreatedThreads">Total Created Threads:</label> @Model.TotalCreatedThreads <br />
                    <label asp-for="TotalCreatedComments">Total Comments:</label> @Model.TotalCreatedComments
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xs-12 col-sm-6">
        <div class="default-block">
            <div class="col-xs-12">
                <div class="header">Public Portfolios</div>
                <div class="content">
                    @foreach (var item in Model.Portfolios)
                    {
                        <p>
                            <a href="https://pegatrade.com/ViewPortfolio/@Model.Username/@Utilities.FormatPortfolioName(item.Name)" target="_blank">@item.Name</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
